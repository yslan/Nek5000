      integer lgmres_NT
      parameter (lgmres_NT=500) !max number of gmres iterations between restarts
      common /gmresNT_fc/  x_NT(lx1*ly1*lz1*lelv,toteq)
     $              , r_NT(lx1*ly1*lz1*lelv,toteq)
     $              , w_NT(lx1*ly1*lz1*lelv,toteq)
     $              , h_NT(lgmres_NT,lgmres_NT), gamma_NT(lgmres_NT+1)
     $              , c_NT(lgmres_NT), s_NT(lgmres_NT)
      common /gmreNT1_fc/  v_NT(lx1*ly1*lz1*lelv,toteq,lgmres_NT)
      common /gmreNT2_fc/  z_NT(lx1*ly1*lz1*lelv,toteq,lgmres_NT)
      real x_NT,r_NT,w_NT,h_NT,gamma_NT,c_NT,s_NT,v_NT,z_NT

